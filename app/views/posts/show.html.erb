<h1 class='m-4'> posts show page</h1>

 <ul>
        <li>
          <div class='post-card m-4'>
            <div>
              <h3>
                <%= @post.title %>
              </h3>
            </div>
            <p>
              <%= @post.text %>
            </p>
            <div>
              <span>Comments:
                <%= @post.comments_counter %>
              </span>
              <span> Likes:
                <%= @post.likes_counter %>
              </span>
            </div>
            <div class="comment">
            
            
            <% @post.comments.each do |comment| %>
              <p>
            <%= comment.text %>
            </p>
            <% end %>
            
            </div>
          </div>
        </li>      
    </ul>

     <h1 class='m-4'>Leave your comment here...</h1>
  <%= form_with url: new_comment_user_post_path do |form| %>
    <div class="m-4">
      <%= form.text_area :text, class: "form-control" %>
    </div>
    <div class="m-4">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>

   <%= form_with url: like_post_user_post_path do |form| %>
    <div class="m-4">
      <%= form.submit "Like" %>
    </div>
  <% end %>


