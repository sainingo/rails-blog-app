<h1> posts show page</h1>

 <ul>
        <li>
          <div class='post-card'>
            <div>
              <h3>
                <%= @post.title %>
              </h3>
            </div>
            <p>
              <%= @post.text %>
            </p>
            <div>
              <span>Comments:
                <%= @post.comments_counter %>
              </span>
              <span> Likes:
                <%= @post.likes_counter %>
              </span>
            </div>
            <div class="comment">


            <% @post.comments.each do |comment| %>
              <p>
            <%= comment.text %>
            </p>
            <% end %>

            </div>
          </div>
        </li>      
    </ul> 
